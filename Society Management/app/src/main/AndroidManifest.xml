<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sonawane_ad.societymanagement">

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@drawable/nav_home"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:roundIcon="@drawable/nav_home"
        android:testOnly="false"
        android:theme="@style/AppTheme">
        <activity android:name=".IntroActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".VotingActivity"
            android:parentActivityName=".DashboardActivity" />
        <activity
            android:name=".AdminVotingDetActivity"
            android:parentActivityName=".AdminVotingActivity" />
        <activity
            android:name=".AdminVotingActivity"
            android:parentActivityName=".DashboardActivity" />
        <activity
            android:name=".PaymentGatewayActivity"
            android:parentActivityName=".DashboardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".AdminPaymentActivity"
            android:parentActivityName=".DashboardActivity" />
        <activity
            android:name=".PaymentActivity"
            android:parentActivityName=".DashboardActivity" />
        <activity
            android:name=".AdminMemDetActivity"
            android:parentActivityName=".DashboardActivity" />
        <activity
            android:name=".AdminMemDetEditActivity"
            android:parentActivityName=".AdminMemDetActivity" />
        <activity
            android:name=".AdminNoticeActivity"
            android:parentActivityName=".DashboardActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".AdminComplaintActivity"
            android:parentActivityName=".ComplaintActivity" />
        <activity
            android:name=".ComplaintChatActivity"
            android:parentActivityName=".ComplaintActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".ComplaintActivity"
            android:parentActivityName=".DashboardActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".NoticeActivity"
            android:parentActivityName=".DashboardActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".ProfileActivity"
            android:parentActivityName=".DashboardActivity" />
        <activity
            android:name=".BillActivity"
            android:parentActivityName=".DashboardActivity" />
        <activity
            android:name=".ChatActivity"
            android:parentActivityName=".DashboardActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".ForgetPassActivity"
            android:parentActivityName=".LoginActivity" />
        <activity
            android:name=".SignUpActivity"
            android:parentActivityName=".LoginActivity" />
        <activity
            android:name=".DashboardActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".LoginActivity" />
        <activity
            android:name=".SplashActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity android:name=".MainActivity">



        </activity>

        <service android:name=".FetchAddressIntentService" /> <!-- for fetching address -->
        <!-- for fetching chat from database -->
        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />

        <provider
            android:name="com.google.firebase.provider.FirebaseInitProvider"
            android:authorities="com.sonawane_ad.societymanagement.firebaseinitprovider"
            android:exported="false"
            android:initOrder="100" />

        <service
            android:name="com.google.firebase.components.ComponentDiscoveryService"
            android:exported="false">
            <meta-data
                android:name="com.google.firebase.components:com.google.firebase.auth.FirebaseAuthRegistrar"
                android:value="com.google.firebase.components.ComponentRegistrar" />
            <meta-data
                android:name="com.google.firebase.components:com.google.firebase.database.DatabaseRegistrar"
                android:value="com.google.firebase.components.ComponentRegistrar" />
            <meta-data
                android:name="com.google.firebase.components:com.google.firebase.storage.StorageRegistrar"
                android:value="com.google.firebase.components.ComponentRegistrar" />
        </service>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.sonawane_ad.societymanagement.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/provider_paths" />
        </provider>

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>