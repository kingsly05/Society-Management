<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:background="@color/yellow"
    android:orientation="vertical"
    tools:context=".ComplaintChatActivity">
    <LinearLayout
        android:id="@+id/nointernet"
        android:gravity="center"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/UI_cardviewnointernet"
            android:layout_width="match_parent"
            android:layout_height="500dp"
            app:cardBackgroundColor="@color/white"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            app:cardElevation="10dp"
            android:layout_gravity="center"
            app:cardCornerRadius="30dp"
            android:layout_margin="8dp"
            android:padding="12dp"
            >
            <com.airbnb.lottie.LottieAnimationView
                android:layout_height="280dp"
                android:layout_width="280dp"
                android:layout_gravity="center"
                app:lottie_rawRes="@raw/no_internet_json"
                app:lottie_autoPlay="true"
                android:padding="10dp"
                app:lottie_loop="true"
                />
            <Button
                android:id="@+id/retry"
                android:layout_marginTop="190dp"
                android:background="@drawable/oval"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:text="Retry"
                android:padding="10dp"
                android:fontFamily="casual"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/toolbar"
        android:layout_gravity="center_vertical"
        android:gravity="center_vertical"
        android:background="@color/black"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="55dp">
        <ImageView
            android:id="@+id/back"
            android:layout_width="50dp"
            android:src="@drawable/back"
            android:padding="10dp"
            android:layout_height="50dp"/>
        <TextView
            android:id="@+id/currname"
            android:text="NAME"
            android:textSize="18dp"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/currprofile"
            android:layout_width="48dp"
            android:layout_marginRight="6dp"
            android:transitionName="imageview1Trans"
            android:layout_height="48dp"
            android:src="@drawable/default_profile"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="0dp"
        android:id="@+id/linear"
        android:orientation="vertical">
        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:orientation="vertical"
            android:layout_weight="1">
            <com.facebook.shimmer.ShimmerFrameLayout
                android:id="@+id/UI_shimmer"
                android:background="@drawable/chat_receiver"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:visibility="gone"
                android:padding="0dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:padding="4dp"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:focusable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="......"
                            android:textSize="11dp"
                            android:textStyle="bold"
                            android:textColor="#000000"/>
                        <ImageView
                            android:focusable="false"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:src="@drawable/default_image"
                            android:scaleType="fitCenter"/>
                        <TextView
                            android:focusable="false"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="8dp"
                            android:text="......"
                            android:textSize="11dp"
                            android:textColor="#000000"/>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:orientation="horizontal">
                            <TextView
                                android:focusable="false"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="8dp"
                                android:text="......"
                                android:textSize="10dp"
                                android:textColor="#424242"/>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </com.facebook.shimmer.ShimmerFrameLayout>
            <ListView
                android:id="@+id/listview1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:divider="@null"
                android:transcriptMode="alwaysScroll"
                android:stackFromBottom="true"
                android:dividerHeight="0dp"
                android:background="@color/yellow"
                android:padding="0dp"
                android:choiceMode="none"
                android:layout_weight="1"/>
            <ProgressBar
                android:id="@+id/progress"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/imageview1"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center|bottom"
                android:background="@color/semi_transparent"
                android:scaleType="fitCenter"
                android:src="@drawable/default_image" />

            <VideoView
                android:id="@+id/videoview"
                android:layout_gravity="center|bottom"
                android:layout_width="150dp"
                android:background="@color/semi_transparent"
                android:layout_height="150dp"/>
            <TextView
                android:id="@+id/textview1"
                android:background="@color/semi_transparent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|bottom"
                android:textStyle="bold"
                android:textSize="14dp"
                android:text="File Size: "/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/attachex"
            android:background="@color/semi_transparent"
            android:layout_width="match_parent"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:visibility="gone"
            android:gravity="center"
            android:layout_height="90dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/UI_cardview1"
                android:layout_width="80dp"
                android:backgroundTint="@color/semi_transparent"
                android:layout_height="80dp"
                app:cardElevation="30dp"
                android:layout_gravity="center"
                android:padding="12dp"
                android:layout_marginRight="50dp"
                app:cardCornerRadius="15dp"
                >
                <ImageView
                    android:id="@+id/attachment"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_gravity="center"
                    android:foregroundGravity="center"
                    android:src="@drawable/file"
                    android:scaleType="fitCenter"/>
            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:id="@+id/UI_cardview2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:backgroundTint="@color/semi_transparent"
                app:cardElevation="30dp"
                android:layout_gravity="center"
                android:padding="12dp"
                app:cardCornerRadius="15dp"
                >
                <ImageView
                    android:id="@+id/camera"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/camera"
                    android:layout_gravity="center"
                    android:foregroundGravity="center"
                    android:scaleType="fitCenter"/>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="0dp"
            android:layout_marginBottom="4dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:id="@+id/UI_cardview3"
                app:cardBackgroundColor="@color/colorPrimaryDark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="20dp"
                android:padding="12dp"
                android:layout_weight="1"
                app:cardCornerRadius="15dp"
                >

                <EditText
                    android:id="@+id/edittext1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="3"
                    android:layout_weight="1"
                    android:textSize="15dp"
                    android:textColor="#ffffff"
                    android:hint="Type a message"
                    android:backgroundTint="@color/black"
                    android:textColorHint="#FFFFFF"/>


            </androidx.cardview.widget.CardView>

            <ImageView
                android:id="@+id/attach"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/stationery"
                android:scaleType="fitCenter"/>

            <ImageView
                android:id="@+id/button1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="15dp"
                android:src="@drawable/send"
                android:background="@drawable/custom_progress_bar_bg"
                android:textSize="14sp"
                android:textColor="#000000"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
